<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginEnd="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_person_transaction"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cash_app_logo" />

    <TextView
        android:id="@+id/contact_transaction_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/img_person_transaction"
        app:layout_constraintTop_toBottomOf="@+id/img_person_transaction" />
</androidx.constraintlayout.widget.ConstraintLayout>